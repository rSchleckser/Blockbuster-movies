<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= details.name %> Page</title>
  <!-- Bootstrap CSS -->
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
  <!-- Semantic UI CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css" rel="stylesheet" />
  <style>
    .profile-pic {
      max-width: 100%;
    }

    .person-info {
      padding-left: 20px;
    }

    .card img {
      height: 100%;
      width: 100%;
      object-fit: cover;
    }

    .carousel-item img {
      width: 100%;
      height: auto;
    }

    .carousel-inner {
      height: 400px;
    }

    ui card .content,
    .ui.cards .card .content.text {
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      padding: 10px;
      background: rgba(0, 0, 0, 0.6);
      color: white;
      text-align: center;
    }

    .ui card .content,
    .ui.cards .card .content.text .character-name {
      color: rgb(152, 194, 194)
    }

    .ui.inverted.button {
      top: 0;
    }
  </style>
</head>

<body>
  <div class="ui container mt-5">
    <!-- Person Profile and Info -->
    <div class="ui grid">
      <div class="four wide column">
        <img src="https://image.tmdb.org/t/p/w500/<%= details.profile_path %>" alt="Profile Picture" class="profile-pic" />
      </div>
      <div class="twelve wide column">
        <div class="person-info">
          <h1 class="ui header"><%= details.name %></h1>
          <p><strong>Born:</strong> <%= details.birthday %></p>
          <p><strong>Place of Birth:</strong> <%= details.place_of_birth %></p>
          <p><strong>Biography:</strong> <%= details.biography %></p>
        </div>
      </div>
    </div>

    <!-- Movie Carousel -->
    <h1 class='heading'>Movies</h1>
    <div id="knownForCarousel" class="carousel slide mt-5" data-ride="carousel">
      <div class="carousel-inner">
        <% if (movies.length > 0) { %>
        <div class="carousel-item active">
          <div class="d-flex justify-content-around">
            <div class="ui link cards">
              <% for (let i = 0; i < 4; i++) { %>
              <% let movie = movies[i]; %>
              <div class="card" style="width: 18rem; position: relative;">
                <div class="blurring dimmable image">
                  <div class="ui dimmer">
                    <div class="content">
                      <div class="center">
                        <button class="ui inverted button"> <a href="/movie/<%= movie.id %>">More Info</a></button>
                      </div>
                    </div>
                  </div>
                  <img src="https://image.tmdb.org/t/p/w500/<%= movie.poster_path %>" class="card-img-top" alt="<%= movie.title %>" />
                </div>
                <div class="content text">
                  <h3 class="card-title actor-name"><%= movie.title %></h3>
                  <h6 class="card-title character-name"><%= movie.character %></h6>
                </div>
              </div>
              <% } %>
            </div>
          </div>
        </div>

        <% for (let i = 4; i < movies.length; i += 4) { %>
        <div class="carousel-item">
          <div class="d-flex justify-content-around">
            <div class="ui link cards">
              <% for (let j = 0; j < 4 && (i + j) < movies.length; j++) { %>
              <% let movie = movies[i + j]; %>
              <div class="card" style="width: 18rem; position: relative;">
                <div class="blurring dimmable image">
                  <div class="ui dimmer">
                    <div class="content">
                      <div class="center">
                        <button class="ui inverted button"> <a href="/movie/<%= movie.id %>">More Info</a></button>
                      </div>
                    </div>
                  </div>
                  <img src="https://image.tmdb.org/t/p/w500/<%= movie.poster_path %>" class="card-img-top" alt="<%= movie.title %>" />
                </div>
                <div class="content text">
                  <h3 class="card-title actor-name"><%= movie.title %></h3>
                  <h6 class="card-title character-name"><%= movie.character %></h6>
                </div>
              </div>
              <% } %>
            </div>
          </div>
        </div>
        <% } %>
        <% } %>
      </div>
      <a class="carousel-control-prev" href="#knownForCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#knownForCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

    <!-- TV Shows Carousel -->
    <h1 class='heading'>TV Shows</h1>
    <div id="tvCarousel" class="carousel slide mt-5" data-ride="carousel">
      <div class="carousel-inner">
        <% if (tvShows.length > 0) { %>
        <div class="carousel-item active">
          <div class="d-flex justify-content-around">
            <div class="ui link cards">
              <% for (let i = 0; i < 4; i++) { %>
              <% let tvShow = tvShows[i]; %>
              <div class="card" style="width: 18rem; position: relative;">
                <div class="blurring dimmable image">
                  <div class="ui dimmer">
                    <div class="content">
                      <div class="center">
                        <button class="ui inverted button"> <a href="/tvshow/<%= tvShow.id %>">More Info</a></button>
                      </div>
                    </div>
                  </div>
                  <img src="https://image.tmdb.org/t/p/w500/<%= tvShow.poster_path %>" class="card-img-top" alt="<%= tvShow.name %>" />
                </div>
                <div class="content text">
                  <h3 class="card-title actor-name"><%= tvShow.name %></h3>
                  <h6 class="card-title character-name"><%= tvShow.character %></h6>
                </div>
              </div>
              <% } %>
            </div>
          </div>
        </div>

        <% for (let i = 4; i < tvShows.length; i += 4) { %>
        <div class="carousel-item">
          <div class="d-flex justify-content-around">
            <div class="ui link cards">
              <% for (let j = 0; j < 4 && (i + j) < tvShows.length; j++) { %>
              <% let tvShow = tvShows[i + j]; %>
              <div class="card" style="width: 18rem; position: relative;">
                <div class="blurring dimmable image">
                  <div class="ui dimmer">
                    <div class="content">
                      <div class="center">
                        <button class="ui inverted button"> <a href="/tvshow/<%= tvShow.id %>">More Info</a></button>
                      </div>
                    </div>
                  </div>
                  <img src="https://image.tmdb.org/t/p/w500/<%= tvShow.poster_path %>" class="card-img-top" alt="<%= tvShow.name %>" />
                </div>
                <div class="content text">
                  <h3 class="card-title actor-name"><%= tvShow.name %></h3>
                  <h6 class="card-title character-name"><%= tvShow.character %></h6>
                </div>
              </div>
              <% } %>
            </div>
          </div>
        </div>
        <% } %>
        <% } %>
      </div>
      <a class="carousel-control-prev" href="#tvCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#tvCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>


    <!-- Image Carousel -->
    <h1 style="text-align: center;">Images</h1>
    <div id="imagesCarousel" class="carousel slide mt-5" data-ride="carousel" style="height: 15rem;">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <div class="d-flex justify-content-around">
            <% for (let i = 0; i < Math.min(3, images.length); i++) { %>
            <div class="card" style="width: 18rem;">
              <img src="https://image.tmdb.org/t/p/w500/<%= images[i].file_path %>" class="card-img-top" alt="Image" />
            </div>
            <% } %>
          </div>
        </div>
        <% for (let i = 3; i < images.length; i += 3) { %>
        <div class="carousel-item">
          <div class="d-flex justify-content-around">
            <% for (let j = 0; j < 3 && (i + j) < images.length; j++) { %>
            <div class="card" style="width: 18rem;">
              <img src="https://image.tmdb.org/t/p/w500/<%= images[i + j].file_path %>" class="card-img-top" alt="Image" />
            </div>
            <% } %>
          </div>
        </div>
        <% } %>
      </div>
      <a class="carousel-control-prev" href="#imagesCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#imagesCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

    <!-- jQuery and Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- Semantic UI JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.js"></script>
    <script>
      $(document).ready(function() {
        $('.blurring.dimmable.image').dimmer({
          on: 'hover'
        });
      });
    </script>
</body>

</html>