<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
  <!-- Semantic UI CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/dashboard.css">
</head>


<body>
  <!-- Following Menu -->
  <div class="ui large top fixed hidden menu">
    <div class="ui container">
      <a class="active item" href='/dashboard/<%= user._id %>'>Home</a>
      <a class="item" href='/movies/<%= user._id %>'><i class="film icon"></i>Movies</a>
      <a class="item" href='/tvShows/<%= user._id %>'><i class="film icon"></i>TV Shows</a>
      <div class="right menu">
        <div class="item">
          <a class="ui button" href='/profile/<%= user._id %>'>Profile</a>
        </div>
        <div class="item">
          <a class="ui primary button" href='/auth/logout'>Log Out</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Sidebar Menu -->
  <div class="ui vertical inverted sidebar menu">
    <a class="active item" href='/dashboard/<%= user._id %>'>Home</a>
    <a class="item" href='/movies/<%= user._id %>'>Movies</a>
    <a class="item" href='/tvShows/<%= user._id %>'>TV Shows</a>
    <a class="item" href='/profile/<%= user._id %>'>Profile</a>
    <a class="item" href='/auth/logout'>Log Out</a>
  </div>


  <!-- Page Contents -->
  <div class="pusher">
    <div class="ui inverted vertical masthead center aligned segment">

      <div class="ui container">
        <div class="ui large secondary inverted pointing menu">
          <a class="toc item">
            <i class="sidebar icon"></i>
          </a>
          <div class='item'><i class="ticket icon"></i>Buster Movies</div>
          <a class="active item" href='/dashboard/<%= user._id %>'>Home</a>
          <a class="item" href='/movies/<%= user._id %>'><i class="film icon"></i>Movies</a>
          <a class="item" href='/tvShows/<%= user._id %>'><i class="tv icon"></i>TV Shows</a>
          <div class="right item">
            <a class="item" href="/profile/<%= user._id %>"><i class='user blue icon'></i>Profile</a>
            <a class="item" href="/auth/logout"><i class="sign out icon"></i></i>Log Out</a>
          </div>
        </div>
      </div>

      <div class="ui text container">
        <h1 class="ui inverted header">
          Home Page
        </h1>
        <h2>Find and enjoy your favorite Movies or TV Show</h2>

        <form class="ui fluid category search" action="/search/<%= user._id %>/results" method="get" style='margin-bottom: 2rem;'>
          <div class="ui icon input">
            <input class="prompt" type="search" name="media" placeholder="Search Person, Movie, or TV Show" aria-label="Search">
            <i class="search icon"></i>
          </div>
          <div class="results"></div>
        </form>
      </div>
    </div>

    <!-- Divider -->
    <div class="ui horizontal divider">Some of you Favorites</div>

    <!-- Main Content Container -->
    <div style="flex: 1;">
      <!-- Featured -->


      <div id="featuredCarousel" class="carousel slide mt-5" data-ride="carousel">
        <div class="carousel-inner">
          <% for(let i = 0; i < featured.length; i += 6) { %>
          <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
            <div class="d-flex justify-content-around">
              <div class="ui link cards">
                <% for(let j = i; j < i + 6 && j < featured.length; j++) { %>
                <% let movie = featured[j]; %>
                <div class="card reduced-card-size">
                  <div class="image">
                    <img src="https://image.tmdb.org/t/p/w500/<%= movie.poster_path %>" alt="<%= movie.title %>" class="reduced-image-size" />
                  </div>
                  <% if (movie.media_type === 'movie') { %>
                  <div class="content">
                    <div class="header"><%= movie.title %></div>
                    <div class="meta">
                      <span class="date"><%= movie.release_date %></span>
                    </div>
                  </div>
                  <% } else if(movie.media_type === 'tv'){ %>
                  <div class="content">
                    <div class="header"><%= movie.name %></div>
                    <div class="meta">
                      <span class="date"><%= movie.first_air_date %></span>
                    </div>
                  </div>
                  <% } %>

                  <div class="ui two bottom attached buttons">
                    <div class="ui button">
                      <i class="add icon"></i>
                      Queue
                    </div>
                    <div class="ui primary button">
                      <i class="play icon"></i>
                      Watch
                    </div>
                  </div>
                </div>
                <% } %>
              </div>
            </div>
          </div>
          <% } %>
        </div>
        <a class="carousel-control-prev" href="#featuredCarousel" role="button" data-slide="prev" style='background-color: black;'>
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </a>
        <a class="carousel-control-next" href="#featuredCarousel" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </a>
      </div>
    </div>

    <!-- Divider -->
    <div class="ui horizontal divider">Your WatchList</div>

    <!-- Second carousel -->
    <div style="flex: 1;">
      <!-- Featured -->

      <div id="featuredCarousel" class="carousel slide mt-5" data-ride="carousel">
        <div class="carousel-inner">
          <% for(let i = 0; i < featured.length; i += 6) { %>
          <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
            <div class="d-flex justify-content-around">
              <div class="ui link cards">
                <% for(let j = i; j < i + 6 && j < featured.length; j++) { %>
                <% let movie = featured[j]; %>
                <div class="card reduced-card-size">
                  <div class="image">
                    <img src="https://image.tmdb.org/t/p/w500/<%= movie.poster_path %>" alt="<%= movie.title %>" class="reduced-image-size" />
                  </div>
                  <% if (movie.media_type === 'movie') { %>
                  <div class="content">
                    <div class="header"><%= movie.title %></div>
                    <div class="meta">
                      <span class="date"><%= movie.release_date %></span>
                    </div>
                  </div>
                  <% } else if(movie.media_type === 'tv'){ %>
                  <div class="content">
                    <div class="header"><%= movie.name %></div>
                    <div class="meta">
                      <span class="date"><%= movie.first_air_date %></span>
                    </div>
                  </div>
                  <% } %>

                  <div class="ui two bottom attached buttons">
                    <div class="ui button">
                      <i class="add icon"></i>
                      Queue
                    </div>
                    <div class="ui primary button">
                      <i class="play icon"></i>
                      Watch
                    </div>
                  </div>
                </div>
                <% } %>
              </div>
            </div>
          </div>
          <% } %>
        </div>
        <a class="carousel-control-prev" href="#featuredCarousel" role="button" data-slide="prev" style='background-color: black;'>
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </a>
        <a class="carousel-control-next" href="#featuredCarousel" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </a>
      </div>
    </div>





    <!-- Footer -->
    <footer class="ui inverted vertical footer segment">
      <div class="ui container">
        <div class="ui stackable inverted divided equal height stackable grid">
          <div class="three wide column">
            <h4 class="ui inverted header">About</h4>
            <div class="ui inverted link list">
              <a href="#" class="item">Contact Us</a>
            </div>
          </div>
          <div class="three wide column">
            <h4 class="ui inverted header">Services</h4>
            <div class="ui inverted link list">
              <a href="#" class="item">Movies</a>
              <a href="#" class="item">TV Shows</a>
            </div>
          </div>
          <div class="seven wide column">
            <h4 class="ui inverted header">Blockbuster Movie Website</h4>
            <p>
              A website for movie lovers to discover and watch the latest
              blockbuster movies and TV shows.
            </p>
          </div>
        </div>
      </div>
    </footer>


    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- jQuery and Semantic UI JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.js"></script>
    <script src="/js/navbarFade.js"></script>



</body>

</html>