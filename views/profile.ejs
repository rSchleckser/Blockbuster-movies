<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
  <!-- Semantic UI CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/profile.css">

</head>

<body>

  <% if (alerts.success) { %>
  <% alerts.success.forEach(msg => { %>

  <div class="alert alert-success"><%= msg %></div>
  <% }) %>
  <% } %>

  <% if (alerts.error) { %>
  <% alerts.error.forEach(msg => { %>
  <div class="alert alert-danger"><%= msg %></div>
  <% }) %>
  <% } %>


  <!-- Following Menu -->
  <div class="ui large top fixed hidden menu">
    <div class="ui container">
      <a class="active item" href='/dashboard'>Home</a>
      <a class="item" href='/search'>
        <i class="grid layout icon"></i> Browse
      </a>
      <a class="item" href='/movies'><i class="film icon"></i>Movies</a>
      <a class="item" href='/tvShows'><i class="film icon"></i>TV Shows</a>
      <div class="right menu">
        <div class="item">
          <a class="ui button" href='/profile'>Profile</a>
        </div>
        <div class="item">
          <a class="ui primary button" href='/auth/logout'>Log Out</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Sidebar Menu -->
  <div class="ui vertical inverted sidebar menu">
    <a class="active item" href='/dashboard'>Home</a>
    <a class="item" href='/search'>Browse</a>
    <a class="item" href='/movies'>Movies</a>
    <a class="item" href='/tvShows'>TV Shows</a>
    <a class="item" href='/profile'>Profile</a>
    <a class="item" href='/auth/logout'>Log Out</a>
  </div>


  <!-- Page Contents -->
  <div class="pusher">
    <div class="ui inverted vertical masthead center aligned segment">
      <div class="ui container">
        <div class="ui large secondary inverted pointing menu">
          <a class="toc item">
            <i class="sidebar icon"></i>
          </a>
          <div class='item'><i class="ticket icon"></i>Buster Movies</div>
          <a class="item" href='/dashboard'>Home</a>
          <a class="item" href='/search'>
            <i class="grid layout icon"></i> Browse
          </a>
          <a class="item" href='/movies'><i class="film icon"></i>Movies</a>
          <a class="item" href='/tvShows'><i class="tv icon"></i>TV Shows</a>
          <div class="right item">
            <a class="active item" href="/profile"><i class='user blue icon'></i>Profile</a>
            <a class="red item" href="/auth/logout"><i class="sign out icon"></i></i>Log Out</a>
          </div>
        </div>
      </div>

      <div class="ui text container">
        <h1 class="ui inverted header">
          Welcome <%= name %>!
        </h1>
        <h2>Find and enjoy your favorite Movies or TV Show</h2>
        <div class="ui huge pink button"><i class="heart icon"></i></i> <a href="#" style='color: aliceblue;'>Favorites </a></div>
        <div class="ui huge primary button"><a href="/profile" style='color: aliceblue;'>Profile</a><i class="right arrow icon"></i></div>
        <div class="ui huge teal button"><i class="list layout icon"></i></i><a href="#" style='color: aliceblue;'>Watchlist</a></div>

      </div>
    </div>
  </div>


  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <!-- jQuery and Semantic UI JS -->
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.js"></script>
  <script src="/js/navbarFade.js"></script>
</body>

</html>