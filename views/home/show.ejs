<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Buster Movies</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css" />
</head>

<body>
  <nav class="navbar navbar-expand-lg bg-body-tertiary" style="margin-bottom: 2rem">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Navbar</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="#">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Link</a>
          </li>
        </ul>
        <form class="d-flex" role="search" action="/search/result" method="get">
          <input class="form-control me-2" type="search" name="media" placeholder="Search" aria-label="Search" />
          <button class="btn btn-outline-success" type="submit">
            Search
          </button>
        </form>
      </div>
    </div>
  </nav>

  <div class="row row-cols-1 row-cols-md-5 g-4">
    <% response.forEach(media => { %>
    <div class="col">
      <div class="card">
        <img <% if (media.media_type === 'person') { %> src="https://image.tmdb.org/t/p/w500/<%= media.profile_path %>" <% }
          else { %> src="https://image.tmdb.org/t/p/w500/<%= media.poster_path
          %>" <% } %> class="card-img-top" alt=" <%= media.media_type%> " />

        <div class="card-body">
          <% if (media.media_type === 'movie') { %>
          <h5 class="card-title"><%= media.title %></h5>
          <% } else if (media.media_type === 'tv') { %>
          <h5 class="card-title"><%= media.name %></h5>
          <% } else if (media.media_type === 'person') { %>
          <h5 class="card-title"><%= media.original_name %></h5>
          <% } %>

          <p><%= media.media_type.toUpperCase() %></p>
          <p class="card-text">id:<%= media.id%></p>
          <p class="card-text">release date:
            <% if(media.media_type === 'movie') { %>
            <%= media.release_date %>
            <% } else if (media.media_type === 'tv') {%>
            <%= media.first_air_date%>
            <% } %>
          </p>
          <p class="card-text"> Genre:
            <% if (media.media_type === 'movie') { %>
            <% const genreNames = media.genre_ids.map(genreId => {%>
            <% const genre = movie_genre.find(g => g.id === genreId);%>
            <%  return genre ? genre.name : '';%>
            <%  }).filter(name => name).join(', ');%>
            <%= genreNames %>
            <% } else if (media.media_type === 'tv') {%>
            <% const genreNames = media.genre_ids.map(genreId => {%>
            <% const genre = tv_genre.find(g => g.id === genreId);%>
            <%  return genre ? genre.name : '';%>
            <%  }).filter(name => name).join(', ');%>
            <%= genreNames %>
            <% } %>
          </p>

          <p class="card-text"><%= media.overview %></p>
          <p class="card-text">vote average: <%= media.vote_average%></p>

          <% if(media.media_type === 'movie') { %>
          <button>
            <a href="/movie/<%= media.id %>">More Info</a>
          </button>
          <% } else if (media.media_type === 'tv') { %>
          <button>
            <a href="#">No Info</a>
          </button>
          <% } else { %>
          <button>
            <a href="#">No Info</a>
          </button>
          <% } %>

        </div>
      </div>
    </div>
    <% }); %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

</html>