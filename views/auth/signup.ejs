<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Sign In</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
  <!-- Semantic UI CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/signup.css">
</head>

<body>


  <% if (alerts.success) { %> <% alerts.success.forEach(msg => { %>

  <div class="alert alert-success"><%= msg %></div>
  <% }) %> <% } %> <% if (alerts.error) { %> <% alerts.error.forEach(msg => {
    %>
  <div class="alert alert-danger"><%= msg %></div>
  <% }) %> <% } %>



  <!-- Sidebar Menu -->
  <div class="ui vertical inverted sidebar menu">
    <a class="item" href='/'>Home</a>
    <a class="active item" href='/auth/signup'>SignUp</a>
    <a class="item" href='/auth/login'>Login</a>
  </div>

  <!-- Page Contents -->
  <div class="pusher">
    <div class="ui inverted vertical masthead center aligned segment">
      <div class="ui container">
        <div class="ui large secondary inverted pointing menu">
          <a class="toc item">
            <i class="sidebar icon"></i>
          </a>
          <div class='item'><a href='/'><i class="ticket icon"></i>Buster Movies</a></div>
          <div class="right item">
            <a class="item" href="/auth/login"><i class="sign in icon"></i></i>Login</a>
          </div>
        </div>
      </div>



      <!--Form -->
      <section class="ui middle aligned center aligned grid">
        <div class="column">
          <h2 class="ui image header" style='color: rgb(255, 223, 186);'>
            <div class="content">
              Sign Up
            </div>
          </h2>


          <form action="/auth/signup" class="ui form" method='post'>
            <div class="ui stacked segment">
              <div class="field">
                <div class="ui left icon input">
                  <i class="add user icon "></i>
                  <input type="text" placeholder='Name' name='name' required>
                </div>
              </div>

              <div class="field">
                <div class="ui left icon input">
                  <i class="call icon"></i>
                  <input type="text" placeholder='Phone Number xxx-xxx-xxxx' name='phone' required>
                </div>
              </div>

              <div class="field">
                <div class="ui left icon input">
                  <i class="mail icon"></i>
                  <input type="email" placeholder="Email" name="email" />
                </div>
              </div>

              <div class="field">
                <div class="ui left icon input">
                  <i class='lock icon'></i>
                  <input type="password" placeholder="Password" name="password" />
                </div>
              </div>
              <input type="submit" value="Login" class="ui fluid teal submit button" />
            </div>
            <div class="ui error message"></div>
          </form>
        </div>
      </section>

    </div>
  </div>

  <!-- Footer -->
  <footer class="ui inverted vertical footer segment">
    <div class="ui container">
      <div class="ui stackable inverted divided equal height stackable grid">
        <div class="three wide column">
          <h4 class="ui inverted header">About</h4>
          <div class="ui inverted link list">
            <a href="#" class="item">Contact Us</a>
          </div>
        </div>
        <div class="three wide column">
          <h4 class="ui inverted header">Services</h4>
          <div class="ui inverted link list">
            <a href="#" class="item">Movies</a>
            <a href="#" class="item">TV Shows</a>
          </div>
        </div>
        <div class="seven wide column">
          <h4 class="ui inverted header">Blockbuster Movie Website</h4>
          <p>
            A website for movie lovers to discover and watch the latest
            blockbuster movies and TV shows.
          </p>
        </div>
      </div>
    </div>
  </footer>

  <!-- Footer -->
  <footer id='mobile' class="ui inverted vertical footer segment">
    <div class="ui container">
      <div class="ui stackable inverted divided equal height stackable grid">
        <div class="seven wide column">
          <h4 class="ui inverted header">Blockbuster Movie Website</h4>
          <p>
            A website for movie lovers to discover and watch the latest
            blockbuster movies and TV shows.
          </p>
        </div>
      </div>
    </div>
  </footer>




  <!-- jQuery and Semantic UI JS -->
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.js"></script>
  <script src="/js/signupValidation.js"></script>
  <script src="/js/navbarFade.js"></script>

</body>

</html>