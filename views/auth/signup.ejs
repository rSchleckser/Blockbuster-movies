<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Sign In</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
  <!-- Semantic UI CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css" rel="stylesheet">
  <!-- <link rel="stylesheet" href="style.css"> -->
  <style>
    body {
      background-color: #DADADA;
    }

    section.ui.middle.aligned.center.aligned.grid {
      width: 25vw;
      margin: auto;
      padding-bottom: 5rem;
    }

    .ui.middle.aligned.center.aligned.grid {
      height: 100%;
    }

    .ui.column {
      max-width: 450px;
    }
  </style>
</head>

<body>
  <% if (alerts.success) { %> <% alerts.success.forEach(msg => { %>

  <div class="alert alert-success"><%= msg %></div>
  <% }) %> <% } %> <% if (alerts.error) { %> <% alerts.error.forEach(msg => {
    %>
  <div class="alert alert-danger"><%= msg %></div>
  <% }) %> <% } %>

  <header class="ui attached stackable menu">
    <div class="ui container">
      <a class="item" href='/'>
        <i class="home icon"></i> Home
      </a>
      <a class="item">
        <i class="grid layout icon"></i> Browse
      </a>
      <a class="item">
        <i class="mail icon"></i> Messages
      </a>
      <div class="ui simple dropdown item">
        More
        <i class="dropdown icon"></i>
        <div class="menu">
          <a class="item"><i class="edit icon"></i> Edit Profile</a>
          <a class="item"><i class="globe icon"></i> Choose Language</a>
          <a class="item"><i class="settings icon"></i> Account Settings</a>
        </div>
      </div>
      <div class="right item">
        <a class='green item' href="/auth/signup"><i class='add user icon'></i>Sign Up</a>
        <a class='green item' href="/auth/login"><i class='sign in icon'></i>Login</a>
      </div>
    </div>
  </header>



  <section class="ui middle aligned center aligned grid">
    <div class="column">
      <h2 class="ui teal image header">
        <div class="content">
          Sign Up
        </div>
      </h2>


      <form action="/auth/signup" class="ui form" method='post'>
        <div class="ui stacked segment">
          <div class="field">
            <div class="ui left icon input">
              <i class="add user icon "></i>
              <input type="text" placeholder='Name' name='name' required>
            </div>
          </div>

          <div class="field">
            <div class="ui left icon input">
              <i class="call icon"></i>
              <input type="text" placeholder='Phone Number xxx-xxx-xxxx' name='phone' required>
            </div>
          </div>

          <div class="field">
            <div class="ui left icon input">
              <i class="mail icon"></i>
              <input type="email" placeholder="Email" name="email" />
            </div>
          </div>

          <div class="field">
            <div class="ui left icon input">
              <i class='lock icon'></i>
              <input type="password" placeholder="Password" name="password" />
            </div>
          </div>
          <input type="submit" value="Login" class="ui fluid teal submit button" />
        </div>
        <div class="ui error message"></div>
      </form>
    </div>
  </section>

  <!-- jQuery and Semantic UI JS -->
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.js"></script>

  <script>
    $('.ui.form')
      .form({
        fields: {
          phone: {
            identifier: 'phone',
            rules: [{
              type: 'minLength[10]',
              prompt: 'Please enter a phone number in correct format xxx-xxx-xxxx'
            }]
          },
          password: {
            identifier: 'password',
            rules: [{
              type: 'empty',
              prompt: 'Please enter a password'
            }, {
              type: 'minLength[6]',
              prompt: 'Your password must be at least 6 characters'
            }]
          }
        }
      })
  </script>

</body>

</html>