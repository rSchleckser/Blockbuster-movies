  <header class="ui attached stackable menu">
    <div class="ui container">
      <% if(!currentUser) { %>
      <a class="item" href='/'>
        <i class="home icon"></i> Home
      </a>
      <div class="right item">
        <a class="green item" href="/auth/signup"><i class='add user green icon'></i>Sign Up</a>
      </div>
      <% } else { %>
      <a class="item" href='/'>
        <i class="home icon"></i> Home
      </a>
      <div class="right item">
        <a class="blue item" href="/profile"><i class='user blue icon'></i>Profile</a>
        <a class="red item" href="/logout"><i class="sign out icon"></i></i>Log Out</a>
      </div>
      <% } %>
    </div>
  </header>





  <div class="ui middle aligned center aligned grid">
    <div class="column">
      <h2 class="ui teal image header">
        <div class="content">
          Log-in to your account
        </div>
      </h2>

      <form action="/auth/login" class="ui form" method='post'>
        <div class="ui stacked segment">
          <div class="field">
            <div class="ui left icon input">
              <i class='user icon'></i>
              <input type="text" name='email' placeholder='E-mail address'>
            </div>
          </div>

          <div class="field">
            <div class="ui left icon input">
              <i class='lock icon'></i>
              <input type="password" name="password" placeholder='Password'>
            </div>
          </div>
          <input type="submit" value="Login" class="ui fluid teal submit button" />
        </div>
        <div class="ui error message"></div>
      </form>
      <div class="ui message">
        New to us? <a href="/auth/signup">Sign Up</a>
      </div>
    </div>
  </div>





  <!-- jQuery and Semantic UI JS -->
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.js"></script>

  <script>
    $('.ui.form')
      .form({
        fields: {
          email: {
            identifier: 'email',
            rules: [{
              type: 'email',
              prompt: 'Please enter a valid e-mail'
            }]
          },
          password: {
            identifier: 'password',
            rules: [{
              type: 'empty',
              prompt: 'Please enter a password'
            }, {
              type: 'minLength[6]',
              prompt: 'Your password must be at least 6 characters'
            }]
          }
        }
      })
  </script>

</body>

</html>


