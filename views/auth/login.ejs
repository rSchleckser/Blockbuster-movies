<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Sign In</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
  <!-- Semantic UI CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css" rel="stylesheet">
  <!-- <link rel="stylesheet" href="style.css"> -->
  <style>
    body {
      background-color: #DADADA;
    }

    .container {
      width: 20%;
      margin-left: 40%;
      margin-top: 10%;
    }

    .ui.middle.aligned.center.aligned.grid {
      height: 100%;
    }

    .ui.column {
      max-width: 450px;
    }
  </style>
  <!-- <link rel="stylesheet" href="/css/style.css" /> -->
</head>

<body>
  <% if (alerts.success) { %> <% alerts.success.forEach(msg => { %>

  <div class="alert alert-success"><%= msg %></div>
  <% }) %> <% } %> <% if (alerts.error) { %> <% alerts.error.forEach(msg => {
    %>
  <div class="alert alert-danger"><%= msg %></div>
  <% }) %> <% } %>

  <header>
    <nav class="navbar">
      <ul>
        <li><a href="/">Home</a></li>
        <% if(!currentUser) { %>
        <li><a href="/auth/signup">Signup</a></li>
        <li><a href="/auth/login">Login</a></li>
        <% } else { %>
        <li><a href="/auth/logout">Logout</a></li>
        <li><a href="/profile">Profile</a></li>
        <% } %>
      </ul>
    </nav>
  </header>


  <section class="container">
    <div class="ui middle aligned center aligned grid">
      <div class="column">
        <h2 class="ui teal image header">
          <div class="content">
            Log-in to your account
          </div>
        </h2>

        <form action="/auth/login" class="ui form">
          <div class="ui stacked segment">
            <div class="field">
              <div class="ui left icon input">
                <i class='user icon'></i>
                <input type="text" name='email' placeholder='E-mail address'>
              </div>
            </div>

            <div class="field">
              <div class="ui left icon input">
                <i class='lock icon'></i>
                <input type="password" name="password" placeholder='Password'>
              </div>
            </div>
            <input type="submit" value="Login" class="ui fluid teal submit button" />
          </div>
          <div class="ui error message"></div>
        </form>
        <div class="ui message">
          New to us? <a href="/auth/signup">Sign Up</a>
        </div>
      </div>
    </div>
  </section>


  <section class="contact" id="contact">
    <h2 class="heading"><span>Login!</span></h2>

    <form action="/auth/login" method="POST">
      <div class="input-box">
        <input type="email" placeholder="Email" name="email" />
        <input type="password" placeholder="Password" name="password" />
      </div>
      <input type="submit" value="Login" class="btn" />
    </form>
  </section>

  <!-- jQuery and Semantic UI JS -->
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.js"></script>

  <script>
    $('.ui.form')
      .form({
        fields: {
          email: {
            identifier: 'email',
            rules: [{
              type: 'email',
              prompt: 'Please enter a valid e-mail'
            }]
          },
          password: {
            identifier: 'password',
            rules: [{
              type: 'password',
              prompt: 'Invalid password'
            }, {
              type: 'minLength[6]',
              prompt: 'Your password must be at least 6 characters'
            }]
          }
        }
      })
  </script>

</body>

</html>