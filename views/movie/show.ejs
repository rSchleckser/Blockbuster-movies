<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= details.title %> Page</title>
  <!-- Bootstrap CSS -->
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
  <!-- Semantic UI CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css" rel="stylesheet" />


  <style>
    .movie-poster {
      max-width: 100%;
    }

    .movie-info {
      padding-left: 20px;
    }

    h1.heading {
      text-align: center;
    }

    .card img {
      height: 100%;
      width: 100%;
      object-fit: cover;
    }

    .carousel-item img {
      width: 100%;
      height: auto;
    }

    .carousel-inner {
      height: 400px;
    }

    .ui card .content,
    .ui.cards .card .content.text {
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      padding: 10px;
      background: rgba(0, 0, 0, 0.6);
      color: white;
      text-align: center;
    }

    .ui card .content,
    .ui.cards .card .content.text .character-name {
      color: rgb(152, 194, 194)
    }

    .ui.inverted.button {
      top: 0;
    }


    .review {
      padding: 10px;
      border-bottom: 1px solid #ddd;
    }
  </style>
</head>

<body>
  <div class="ui container mt-5">
    <!-- Movie Poster and Info -->
    <div class="ui grid backdrop">
      <div class="four wide column">
        <img src="https://image.tmdb.org/t/p/w500/<%= details.poster_path %>" alt="Movie Poster" class="movie-poster" />
      </div>
      <div class="twelve wide column">
        <div class="movie-info">

          <h1 class="ui header"><%= details.title %></h1>

          <!-- Filter through Genre Name -->
          <% const genre = details.genres.map(genre => { %>
          <% return genre.name %>
          <% }).filter(name => name).join(', ') %>

          <p><strong>Genre:</strong> <%= genre %></p>
          <p><strong>Release Date:</strong> <%= details.release_date %></p>
          <p><strong>Rating:</strong> PG-13</p>
          <p><strong>Description:</strong> <%= details.overview %></p>
        </div>
      </div>
    </div>

    <!-- Video Carousel -->
    <h1 class=' heading'>Videos</h1>
    <div id="videoCarousel" class="carousel slide mt-5" data-ride="carousel" style='height: 13rem;'>
      <div class="carousel-inner">
        <% if (videos.length > 0) { %>
        <!-- First carousel item (active) -->
        <div class="carousel-item active">
          <div class="d-flex justify-content-around">
            <% for(let i = 0; i < Math.min(3, videos.length); i++) { %>
            <% let video = videos[i]; %>
            <iframe src="https://www.youtube.com/embed/<%= video.key %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            <% } %>
          </div>
        </div>

        <!-- Subsequent carousel items -->
        <% for(let i = 3; i < videos.length; i += 3) { %>
        <div class="carousel-item">
          <div class="d-flex justify-content-around">
            <% for(let j = 0; j < 3 && (i + j) < videos.length; j++) { %>
            <% let video = videos[i + j]; %>
            <iframe src="https://www.youtube.com/embed/<%= video.key %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            <% } %>
          </div>
        </div>
        <% } %>
        <% } %>
      </div>
      <a class="carousel-control-prev" href="#videoCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#videoCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>


    <!-- Cast Carousel -->
    <h1 class='heading'>Cast</h1>
    <div id="castCarousel" class="carousel slide mt-5" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <div class="d-flex justify-content-around">
            <div class="ui link cards">
              <% for( let i = 0; i < 4; i++ ) { %>
              <% let cast = credits[i] %>
              <div class="card" style="width: 18rem; position: relative;">
                <div class="blurring dimmable image">
                  <div class="ui dimmer">
                    <div class="content">
                      <div class="center">
                        <button class="ui inverted button"> <a href="/person/<%= cast.id %>">More Info</a></button>
                      </div>
                    </div>
                  </div>
                  <img src="https://image.tmdb.org/t/p/w500/<%= cast.profile_path %>" class="card-img-top" alt="<%= cast.name %>" />
                </div>
                <div class="content text">
                  <h3 class="card-title actor-name"><%= cast.name %></h3>
                  <h6 class="card-title character-name"><%= cast.character %></h6>
                </div>
              </div>
              <% } %>
            </div>
          </div>
        </div>

        <% for(let i = 4; i < credits.length; i += 4) { %>
        <div class="carousel-item">
          <div class="d-flex justify-content-around">
            <div class="ui link cards">
              <% for(let j = 0; j < 4 && (i + j) < credits.length; j++) { %>
              <% let cast = credits[i + j]; %>
              <div class="card" style="width: 18rem; position: relative;">
                <div class="blurring dimmable image">
                  <div class="ui dimmer">
                    <div class="content">
                      <div class="center">
                        <button class="ui inverted button"> <a href="/person/<%= cast.id %>">More Info</a></button>
                      </div>
                    </div>
                  </div>
                  <img src="https://image.tmdb.org/t/p/w500/<%= cast.profile_path %>" class="card-img-top" alt="<%= cast.name %>" />
                </div>
                <div class="content text">
                  <h3 class="card-title actor-name"><%= cast.name %></h3>
                  <h6 class="card-title character-name"><%= cast.character %></h6>
                </div>
              </div>
              <% } %>
            </div>
          </div>
        </div>
        <% } %>
      </div>
      <a class="carousel-control-prev" href="#castCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#castCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>



    <!-- Image Carousel -->
    <h1 class='heading'>Images</h1>
    <div id="imagessCarousel" class="carousel slide mt-5" data-ride="carousel" style='height: 15rem;'>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <div class="d-flex justify-content-around">
            <% for (let i = 0; i < 3 && i < images.length; i++) { %>
            <% let image = images[i]; %>
            <div class="card" style="width: 18rem;">
              <img src="https://image.tmdb.org/t/p/w500/<%= image.file_path %>" class="card-img-top" alt="Image" />
            </div>
            <% } %>
          </div>
        </div>

        <% for (let i = 3; i < images.length; i += 3) { %>
        <div class="carousel-item">
          <div class="d-flex justify-content-around">
            <% for (let j = 0; j < 3 && (i + j) < images.length; j++) { %>
            <% let image = images[i + j]; %>
            <div class="card" style="width: 18rem;">
              <img src="https://image.tmdb.org/t/p/w500/<%= image.file_path %>" class="card-img-top" alt="Image" />
            </div>
            <% } %>
          </div>
        </div>
        <% } %>
      </div>
      <a class="carousel-control-prev" href="#imagessCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#imagessCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>



    <!-- Top Reviews -->
    <h1 class='heading'>Reviews</h1>
    <div class="ui segment mt-5">
      <h2 class="ui header">Top Reviews</h2>
      <% for( let i = 0; i < (reviews.length > 2 ? 3 : reviews.length); i++ ) { %>
      <div class="review">
        <h4>Author: <%= reviews[i].author %></h4>
        <h6>Content:</h6>
        <p><%=reviews[i].content %></p>
      </div>
      <% } %>
    </div>

    <!-- Recommendations Carousel -->
    <h1 class='heading'>Recommendations</h1>
    <div id="recommendationsCarousel" class="carousel slide mt-5" data-ride="carousel" style="padding-bottom: 5rem">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <div class="d-flex justify-content-around">
            <div class="ui link cards">
              <% for(let i = 0; i < 3; i++) { %>
              <% let recommend = recommendations[i] %>
              <div class="card" style="width: 18rem">
                <div class="blurring dimmable image">
                  <div class="ui dimmer">
                    <div class="content">
                      <div class="center">
                        <button class="ui inverted button"> <a href="/movie/<%= recommend.id %>">View Movie</a></button>
                      </div>
                    </div>
                  </div>
                  <img src="https://image.tmdb.org/t/p/w500/<%= recommend.poster_path %>" class="card-img-top" alt="<%= recommend.title %>" />
                </div>
              </div>
              <% } %>
            </div>
          </div>
        </div>

        <% for(let i = 3; i < recommendations.length; i += 3) { %>
        <div class="carousel-item">
          <div class="d-flex justify-content-around">
            <div class="ui link cards">
              <% for(let j = 0; j < 3 && (i + j) < recommendations.length; j++) { %>
              <% let recommend = recommendations[i + j]; %>
              <div class="card" style="width: 18rem">
                <div class="blurring dimmable image">
                  <div class="ui dimmer">
                    <div class="content">
                      <div class="center">
                        <button class="ui inverted button"> <a href="/movie/<%= recommend.id %>">View Movie</a></button>
                      </div>
                    </div>
                  </div>
                  <img src="https://image.tmdb.org/t/p/w500/<%= recommend.poster_path %>" class="card-img-top" alt="<%= recommend.title %>" />
                </div>
              </div>
              <% } %>
            </div>
          </div>
        </div>
        <% } %>
      </div>
      <a class="carousel-control-prev" href="#recommendationsCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#recommendationsCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>

  <!-- jQuery and Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <!-- Semantic UI JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.js"></script>
  <script>
    $(document).ready(function() {
      $('.blurring.dimmable.image').dimmer({
        on: 'hover'
      });
    });
  </script>

</body>

</html>