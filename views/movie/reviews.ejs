<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Reviews</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css" />
  <style>
    /* Header Container */
    div.ui.inverted.vertical.masthead.center.aligned.segment {
      background: linear-gradient(60deg, rgb(0, 0, 0) 11.2%, rgb(11, 132, 145) 91.1%);
    }

    h1.ui.header {
      padding-top: 2rem;
      font-size: 2.5rem;
    }

    /* Results header color */
    .resultQuery {
      color: rgb(11, 132, 145)
    }

    /* User name color */
    h4.ui.header.user {
      color: rgba(244, 123, 110, 0.721);
    }


    /* Body style */
    .mt-5 {
      margin-top: 5em !important;
    }

    .review-list .review-item {
      margin-bottom: 2em;
      padding: 1em;
    }

    .review-list .review-item .header {
      font-size: 1.2em;
      margin-top: 0;
    }

    .review-list .review-item .meta .date {
      font-size: 0.9em;
      color: grey;
      margin-bottom: 0.5em;
    }

    .review-list .review-item .description p {
      font-size: 1.1em;
      line-height: 1.5em;
    }

    .review-form {
      margin-top: 3em;
    }

    .review-form .ui.form .field label {
      font-size: 1.1em;
    }

    .review-form .ui.form .field input,
    .review-form .ui.form .field textarea {
      font-size: 1em;
    }

    .review-form .ui.button {
      margin-top: 1em;
    }

    .review-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .button-group {
      display: flex;
      flex-direction: column;
    }

    .button-group .ui.button {
      margin-bottom: 0.5em;
    }

    .button-group .ui.button:last-child {
      margin-bottom: 0;
    }


    /* footer */
    footer.ui.inverted.vertical.footer.segment {
      padding: 3rem;
      margin-top: 3rem;
    }
  </style>
</head>

<body>

  <div class="pusher">
    <div class="ui inverted vertical masthead center aligned segment">

      <div class="ui container" style='width: 1400px;'>
        <div class="ui large secondary inverted pointing menu">

          <div class='item'><i class="ticket icon"></i>Buster Movies</div>
          <a class=" item" href='/dashboard/<%= user._id %>'>Home</a>
          <a class="active item" href='/search'>
            <i class="grid layout icon"></i> Browse
          </a>
          <a class="item" href='/movies'><i class="film icon"></i>Movies</a>
          <a class="item" href='/tvShows'><i class="tv icon"></i>TV Shows</a>
          <div class="right item">
            <a class="item" href="/profile/<%= user._id %>"><i class='user blue icon'></i>Profile</a>
            <a class="item" href="/auth/logout"><i class="sign out icon"></i></i>Log Out</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="ui container mt-5">
    <h1 class="ui header">Reviews for <span class='resultQuery'><%= details.title %></span></h1>

    <div class="review-list">

      <% newReviews.forEach(review => { %>
      <div class="ui segment review-item">
        <div class="content">
          <div class="review-header">
            <div>
              <h4 class="ui header user"><%= review.author %></h4>
              <div class="meta">
                <span class="date">Posted on: <%= review.createdAt %></span>
              </div>
            </div>
            <% if (review.userId.toString() === user._id.toString()) { %>
            <div>
              <button class="ui small teal button">Edit</button>
              <form action="/movie/<%= details.id %>/reviews/<%= user._id %>?_method=DELETE" method="POST" style="display: inline;">
                <input type="hidden" name="reviewId" value="<%= review._id %>">
                <button class="ui small red button" type="submit">Delete</button>
              </form>
            </div>
            <% } %>
          </div>
          <div class="description">
            <p><%= review.content %></p>
          </div>
        </div>
      </div>
      <% }); %>

      <% reviews.forEach(review => { %>
      <div class="ui segment review-item">
        <div class="content">
          <div class="review-header">
            <div>
              <h4 class="ui header"><%= review.author %></h4>
              <div class="meta">
                <span class="date">Posted on: <%= review.created_at %></span>
              </div>
            </div>
          </div>
          <div class="description">
            <p><%= review.content %></p>
          </div>
        </div>
      </div>
      <% }); %>
    </div>

    <div class="review-form">
      <h2 class="ui dividing header">Post a Review</h2>
      <form class="ui form" action="/movie/<%= details.id %>/reviews/<%= user._id %>" method="POST">
        <div class="field">
          <label for="user">Your Name</label>
          <input type="text" id="user" name="user" required>
        </div>
        <div class="field">
          <label for="content">Your Review</label>
          <textarea id="content" name="content" rows="3" required></textarea>
        </div>
        <button type="submit" class="ui primary button">Submit Review</button>
      </form>
    </div>
  </div>




  <!-- Footer -->
  <footer class="ui inverted vertical footer segment">
    <div class="ui container">
      <div class="ui stackable inverted divided equal height stackable grid">
        <div class="three wide column">
          <h4 class="ui inverted header">About</h4>
          <div class="ui inverted link list">
            <a href="#" class="item">Contact Us</a>
          </div>
        </div>
        <div class="three wide column">
          <h4 class="ui inverted header">Services</h4>
          <div class="ui inverted link list">
            <a href="#" class="item">Movies</a>
            <a href="#" class="item">TV Shows</a>
          </div>
        </div>
        <div class="seven wide column">
          <h4 class="ui inverted header">Blockbuster Movie Website</h4>
          <p>
            A website for movie lovers to discover and watch the latest
            blockbuster movies and TV shows.
          </p>
        </div>
      </div>
    </div>
  </footer>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.js"></script>
</body>

</html>