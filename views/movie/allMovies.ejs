<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Movies</title>
  <!-- Bootstrap CSS -->
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
  <!-- Semantic UI CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css" rel="stylesheet" />
  <style>
    /* NavBar Container */
    div.ui.inverted.vertical.masthead.center.aligned.segment {
      background: linear-gradient(60deg, rgb(0, 0, 0) 11.2%, rgb(11, 132, 145) 91.1%);
    }

    /* Cards */
    div.ui.special.cards {
      justify-content: center;
    }

    /* H1 header color */
    .heading {
      color: rgb(11, 132, 145);
      text-align: center;
      margin-left: 2rem;
      font-size: 2.5rem;
    }

    /* toggle buttons */
    .toggled {
      background-color: #21ba45 !important;
      color: white !important;
    }

    .favorited {
      background-color: #e03997 !important;
      color: white !important;
    }


    /* Carousels */
    div.d-flex.justify-content-around {
      padding: 0;
      margin: 0;
    }

    /* Carousel Buttons */
    div#trendingCarousel {
      margin-left: 7rem;
      width: 90%;
    }

    div#nowPlayingCarousel {
      margin-left: 7rem;
      width: 90%;
    }

    /* Trending Carousel Buttons*/
    #trendingCarousel a.carousel-control-next {
      background-color: rgba(19, 18, 18, 0.507);
      border-radius: 50%;
      height: 40px;
      width: 40px;
      margin-top: 17.8rem;
    }

    #trendingCarousel a.carousel-control-prev {
      background-color: rgba(19, 18, 18, 0.507);
      border-radius: 50%;
      height: 40px;
      width: 40px;
      margin-top: 17.8rem;
    }

    /* Now Playing Carousel Buttons*/
    #nowPlayingCarousel a.carousel-control-next {
      background-color: rgba(19, 18, 18, 0.507);
      border-radius: 50%;
      height: 40px;
      width: 40px;
      margin-top: 17.8rem;
    }

    #nowPlayingCarousel a.carousel-control-prev {
      background-color: rgba(19, 18, 18, 0.507);
      border-radius: 50%;
      height: 40px;
      width: 40px;
      margin-top: 17.8rem;
    }

    /* footer */
    footer.ui.inverted.vertical.footer.segment {
      padding: 3rem;
      margin-top: 3rem;
    }
  </style>
</head>

<body>
  <!-- Navbar -->
  <div class="pusher">
    <div class="ui inverted vertical masthead center aligned segment">

      <div class="ui container" style='width: 1400px;'>
        <div class="ui large secondary inverted pointing menu">

          <div class='item'><i class="ticket icon"></i>Buster Movies</div>
          <a class=" item" href='/dashboard/<%= user._id %>'>Home</a>
          <a class="item" href='/search'>
            <i class="grid layout icon"></i> Browse
          </a>
          <a class="active item" href='/movies/<%= user._id %>'><i class="film icon"></i>Movies</a>
          <a class="item" href='/tvShows/<%= user._id %>'><i class="tv icon"></i>TV Shows</a>
          <div class="right item">
            <a class="item" href="/profile/<%= user._id %>"><i class='user blue icon'></i>Profile</a>
            <a class="item" href="/auth/logout"><i class="sign out icon"></i></i>Log Out</a>
          </div>
        </div>
      </div>
    </div>
  </div>



  <!-- Trending Carousel -->
  <h1 class='heading'>Trending Movies</h1>
  <div id="trendingCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <% for(let i = 0; i < trendingMovies.length; i += 7) { %>
      <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
        <div class="d-flex justify-content-around">
          <div class="ui special cards">
            <% for(let j = i; j < i + 7 && j < trendingMovies.length; j++) { %>
            <% let movie = trendingMovies[j]; %>
            <div class="card">
              <div class="blurring dimmable image">
                <div class="ui dimmer">
                  <div class="content">
                    <div class="center">
                      <div class="ui inverted button"><a href="/movie/<%= movie.id %>/<%= user._id %>">View Page</a></div>
                    </div>
                  </div>
                </div>
                <img src="https://image.tmdb.org/t/p/w500/<%= movie.poster_path %>" class="card-img-top" alt="<%= movie.media_type %>" />
              </div>
              <div class="content">
                <a class="header"><%= movie.title %></a>
                <div class="meta">
                  <% const genreNames = movie.genre_ids.map(genreId => {%>
                  <% const genre = movie_genre.find(g => g.id === genreId);%>
                  <%  return genre ? genre.name : '';%>
                  <%  }).filter(name => name).join(', ');%>
                  <span><%= genreNames %></span>
                  <div class="description">Release Date: <%= movie.release_date %></div>
                </div>
              </div>
              <div class="ui two bottom attached buttons">
                <div class="ui toggle button">
                  <i class="add icon"></i> Add
                </div>
                <div class="ui teal favorite button">
                  <i class="add icon"></i> Favorite
                </div>
              </div>
            </div>
            <% } %>
          </div>
        </div>
      </div>
      <% } %>
    </div>
    <a class="carousel-control-prev" href="#trendingCarousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#trendingCarousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <!-- nowPlaying Carousel -->
  <h1 class='heading'>Now Playing Movies</h1>
  <div id="nowPlayingCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <% for(let i = 0; i < nowPlayingMovies.length; i += 7) { %>
      <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
        <div class="d-flex justify-content-around">
          <div class="ui special cards">
            <% for(let j = i; j < i + 7 && j < nowPlayingMovies.length; j++) { %>
            <% let movie = nowPlayingMovies[j]; %>
            <div class="card">
              <div class="blurring dimmable image">
                <div class="ui dimmer">
                  <div class="content">
                    <div class="center">
                      <div class="ui inverted button"><a href="/movie/<%= movie.id %>/<%= user._id %>">View Page</a></div>
                    </div>
                  </div>
                </div>
                <img src="https://image.tmdb.org/t/p/w500/<%= movie.poster_path %>" class="card-img-top" alt="<%= movie.media_type %>" />
              </div>
              <div class="content">
                <a class="header"><%= movie.title %></a>
                <div class="meta">
                  <% const genreNames = movie.genre_ids.map(genreId => {%>
                  <% const genre = movie_genre.find(g => g.id === genreId);%>
                  <%  return genre ? genre.name : '';%>
                  <%  }).filter(name => name).join(', ');%>
                  <span><%= genreNames %></span>
                  <div class="description">Release Date: <%= movie.release_date %></div>
                </div>
              </div>
              <div class="ui two bottom attached buttons">
                <div class="ui toggle button">
                  <i class="add icon"></i> Add
                </div>
                <div class="ui teal favorite button">
                  <i class="add icon"></i> Favorite
                </div>
              </div>
            </div>
            <% } %>
          </div>
        </div>
      </div>
      <% } %>
    </div>
    <a class="carousel-control-prev" href="#nowPlayingCarousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#nowPlayingCarousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>





  <!-- Footer -->
  <footer class="ui inverted vertical footer segment">
    <div class="ui container">
      <div class="ui stackable inverted divided equal height stackable grid">
        <div class="three wide column">
          <h4 class="ui inverted header">About</h4>
          <div class="ui inverted link list">
            <a href="#" class="item">Contact Us</a>
          </div>
        </div>
        <div class="three wide column">
          <h4 class="ui inverted header">Services</h4>
          <div class="ui inverted link list">
            <a href="#" class="item">Movies</a>
            <a href="#" class="item">TV Shows</a>
          </div>
        </div>
        <div class="seven wide column">
          <h4 class="ui inverted header">Blockbuster Movie Website</h4>
          <p>
            A website for movie lovers to discover and watch the latest
            blockbuster movies and TV shows.
          </p>
        </div>
      </div>
    </div>
  </footer>

  <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <!-- Semantic UI JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.js"></script>
  <script src="/js/dimmableImage.js"></script>
  <script src="/js/addToWatchList.js"></script>
  <script src="/js/addToFavorites.js"></script>
</body>

</html>