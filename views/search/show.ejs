<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Buster Movies</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css" />
  <style>
    /* Cards */
    div.ui.special.cards {
      justify-content: center;
    }

    h1 {
      margin-left: 2rem;
      font-size: 2.5rem;
    }

    /* Results header color */
    .resultQuery {
      color: rgb(11, 132, 145)
    }

    .toggled {
      background-color: #21ba45 !important;
      color: white !important;
    }



    /* Header Container */
    div.ui.inverted.vertical.masthead.center.aligned.segment {
      background: linear-gradient(60deg, rgb(0, 0, 0) 11.2%, rgb(11, 132, 145) 91.1%);
    }

    /* footer */
    footer.ui.inverted.vertical.footer.segment {
      padding: 3rem;
      margin-top: 3rem;
    }
  </style>
</head>

<body>

  <div class="pusher">
    <div class="ui inverted vertical masthead center aligned segment">

      <div class="ui container" style='width: 1400px;'>
        <div class="ui large secondary inverted pointing menu">

          <div class='item'><i class="ticket icon"></i>Buster Movies</div>
          <a class=" item" href='/dashboard/<%= user._id %>'>Home</a>
          <a class="active item" href='/search'>
            <i class="grid layout icon"></i> Browse
          </a>
          <a class="item" href='/movies/<%= user._id %>'><i class="film icon"></i>Movies</a>
          <a class="item" href='/tvShows/<%= user._id %>'><i class="tv icon"></i>TV Shows</a>
          <div class="right item">
            <a class="item" href="/profile/<%= user._id %>"><i class='user blue icon'></i>Profile</a>
            <a class="item" href="/auth/logout"><i class="sign out icon"></i></i>Log Out</a>
          </div>
        </div>
      </div>
    </div>
  </div>


  <h1>Results for: <span class='resultQuery'><%=query%></span></h1>


  <div class="ui special cards">
    <% medias.forEach(media => { %>
    <div class="card">
      <div class="blurring dimmable image">
        <div class="ui dimmer">
          <div class="content">
            <div class="center">
              <% if(media.media_type === 'movie') { %>
              <div class="ui inverted button"><a href="/movie/<%= media.id %>/<%= user._id %>">View Page</a></div>
              <% } else if (media.media_type === 'tv') { %>
              <div class="ui inverted button"><a href="/tv/<%= media.id %>/<%= user._id %>">View Page</a></div>
              <% } else { %>
              <div class="ui inverted button"><a href="/person/<%= media.id %>/<%= user._id %>">View Page</a></div>
              <% } %>
            </div>
          </div>
        </div>
        <img <% if (media.media_type === 'person') { %> src="https://image.tmdb.org/t/p/w500/<%= media.profile_path %>" <% }
        else { %> src="https://image.tmdb.org/t/p/w500/<%= media.poster_path
        %>" <% } %> class="card-img-top" alt=" <%= media.media_type%> " />
      </div>
      <div class="content">
        <!--Title-->
        <% if (media.media_type === 'movie') { %>
        <a class="header"><%= media.title %></a>
        <% } else if (media.media_type === 'tv') { %>
        <a class="header"><%= media.name %></a>
        <% } else if (media.media_type === 'person') { %>
        <a class="header"><%= media.original_name %></a>
        <% } %>
        <div class="meta">
          <span><%= media.media_type.toUpperCase() %></span>

          <% if(media.media_type !== 'person'){ %>
          <div class="description">Release Date:
            <% if(media.media_type === 'movie') { %>
            <%= media.release_date %>
            <% } else if (media.media_type === 'tv') {%>
            <%= media.first_air_date%>
            <% } %>
          </div>
          <% } %>
        </div>
      </div>
      <div class="ui two bottom attached buttons">

        <div class="ui toggle button">
          <i class="add icon"></i>
          Add
        </div>
        <div class="ui primary button">
          <i class="play icon"></i>
          Watch
        </div>
      </div>
    </div>
    <% }); %>
  </div>


  <!-- Footer -->
  <footer class="ui inverted vertical footer segment">
    <div class="ui container">
      <div class="ui stackable inverted divided equal height stackable grid">
        <div class="three wide column">
          <h4 class="ui inverted header">About</h4>
          <div class="ui inverted link list">
            <a href="#" class="item">Contact Us</a>
          </div>
        </div>
        <div class="three wide column">
          <h4 class="ui inverted header">Services</h4>
          <div class="ui inverted link list">
            <a href="#" class="item">Movies</a>
            <a href="#" class="item">TV Shows</a>
          </div>
        </div>
        <div class="seven wide column">
          <h4 class="ui inverted header">Blockbuster Movie Website</h4>
          <p>
            A website for movie lovers to discover and watch the latest
            blockbuster movies and TV shows.
          </p>
        </div>
      </div>
    </div>
  </footer>


  <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <!-- Semantic UI JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.js"></script>
  <script src="/js/dimmableImage.js"></script>
  <script src="/js/addToWatchList.js"></script>



</body>

</html>