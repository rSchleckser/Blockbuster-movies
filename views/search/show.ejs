<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Buster Movies</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css" />
  <style>
    /* Cards */
    div.ui.special.cards {
      justify-content: center;
    }

    h1 {
      margin-left: 2rem;
      font-size: 2.5rem;
    }

    .resultQuery {
      color: rgb(11, 132, 145)
    }

    .toggled {
      background-color: #21ba45 !important;
      /* Semantic UI green color */
      color: white !important;
    }
  </style>
</head>

<body>
  <nav class="navbar navbar-expand-lg bg-body-tertiary" style="margin-bottom: 2rem">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Buster Movies</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="#">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Link</a>
          </li>
        </ul>
        <form class="d-flex" role="search" action="/search/results" method="get">
          <input class="form-control me-2" type="search" name="media" placeholder="Search" aria-label="Search" />
          <button class="btn btn-outline-success" type="submit">
            Search
          </button>
        </form>
      </div>
    </div>
  </nav>

  <!-- <form class="d-flex" role="search" action="/search/results" method="get">
    <input class="form-control me-2" type="search" name="media" placeholder="Search" aria-label="Search" />
    <button class="btn btn-outline-success" type="submit">
      Search
    </button>
  </form> -->

  <h1>Results for: <span class='resultQuery'><%=query%></span></h1>


  <div class="ui special cards">
    <% medias.forEach(media => { %>
    <div class="card">
      <div class="blurring dimmable image">
        <div class="ui dimmer">
          <div class="content">
            <div class="center">
              <% if(media.media_type === 'movie') { %>
              <div class="ui inverted button"><a href="/movie/<%= media.id %>">View Page</a></div>
              <% } else if (media.media_type === 'tv') { %>
              <div class="ui inverted button"><a href="/tv/<%= media.id %>">View Page</a></div>
              <% } else { %>
              <div class="ui inverted button"><a href="/person/<%= media.id %>">More Info</a></div>
              <% } %>
            </div>
          </div>
        </div>
        <img <% if (media.media_type === 'person') { %> src="https://image.tmdb.org/t/p/w500/<%= media.profile_path %>" <% }
        else { %> src="https://image.tmdb.org/t/p/w500/<%= media.poster_path
        %>" <% } %> class="card-img-top" alt=" <%= media.media_type%> " />
      </div>
      <div class="content">
        <!--Title-->
        <% if (media.media_type === 'movie') { %>
        <a class="header"><%= media.title %></a>
        <% } else if (media.media_type === 'tv') { %>
        <a class="header"><%= media.name %></a>
        <% } else if (media.media_type === 'person') { %>
        <a class="header"><%= media.original_name %></a>
        <% } %>
        <div class="meta">
          <span><%= media.media_type.toUpperCase() %></span>
          <div class="description">Release Date:
            <% if(media.media_type === 'movie') { %>
            <%= media.release_date %>
            <% } else if (media.media_type === 'tv') {%>
            <%= media.first_air_date%>
            <% } %>
          </div>

        </div>
      </div>
      <div class="ui two bottom attached buttons">
        <div class="ui toggle button">
          <i class="add icon"></i>
          Add
        </div>
        <div class="ui primary button">
          <i class="play icon"></i>
          Watch
        </div>
      </div>
    </div>
    <% }); %>
  </div>





  <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <!-- Semantic UI JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.js"></script>
  <script src="/js/dimmableImage.js"></script>

  <script>
    document.addEventListener("DOMContentLoaded", function() {
      const toggleButtons = document.querySelectorAll('.ui.toggle.button');
      toggleButtons.forEach(button => {
        button.addEventListener('click', function() {
          this.classList.toggle('toggled')
          const icon = this.querySelector('i');

          // Toggle text and icon
          if (this.classList.contains('toggled')) {
            icon.className = 'check icon';
            this.childNodes[2].nodeValue = 'Added';
            console.log(this.childNodes[2].nodeValue)
          } else {
            icon.className = 'add icon';
            this.childNodes[2].nodeValue = 'Add';
          }

        })
      });
    });
  </script>

</body>

</html>